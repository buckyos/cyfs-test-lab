{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "target": "ES2019",  
    "jsx": "react",
    "module": "CommonJS",
    "declaration": true, 
    "forceConsistentCasingInFileNames": true, 
    "useUnknownInCatchVariables": false ,
    "skipLibCheck": true, 
    "strict": true,   
    "sourceMap": false,
    "noEmitOnError": true, 
    "moduleResolution": "node",
    "noImplicitAny": false,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "outDir": "./lib",

  },
  "include": ["./", "typing.d.ts"],
  "exclude": ["deploy", "node_modules"]
}
